extends ../layout 

block content
    a(href='/bicicletas') Volver
    br
    h1 Nueva reserva 
    form(action='/reserva/' + codigo + '/create' method='POST')
        table.table 
            tr 
                td
                    label(for='desde') Desde:
                td
                    input#desde(type='date' name='desde')
            tr 
                td
                    label(for='hasta') Hasta:
                td
                    input#hasta(type='date' name='hasta')
            tr
                td 
                td
                    input.btn(type='submit' value='Reservar')
